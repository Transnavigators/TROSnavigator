<launch>
    <node name="alexa_voice_control" pkg="alexa_voice_control" type="alexa_voice_control.py">
        <param name="user_tag_id" value="1001"/>
    </node>>
    <node name="arduino_control" pkg="arduino_control" type="arduino_control.py">
        <param name="port" value="/dev/ttyACM0"/>
    </node>
    <node name="arduino_publisher" pkg="arduino_publisher" type="arduino_publisher.py">
        <param name="port" value="/dev/ttyACM0"/>
        <param name="poll_rate" value="1000"/>
        <param name="battery_capacity" value="35"/>
    </node>
    <node name="localino_server" pkg="localino_server" type="localino_server.py">
        <param name="base_tag_id" value="1002"/>
        <param name="poll_rate" value="4000"/>
        <param name="port" value="10000"/>
        <param name="anchor_names" value="9002,9003,9005"/>
        <param name="anchor_9002" value="0,0,0"/>
        <param name="anchor_9003" value="3.78,0.28,0"/>
        <param name="anchor_9005" value="1.12,2.03,0"/>
        <param name="tag_names" value="1001,1002"/>
        <param name="timeout" value="1000000000"/>
        <!--<rosparam file="$(find localino_server)/localino.yaml" command="load"/>-->
    </node>
    <node name="berryimu_publisher" pkg="berryimu_publisher" type="berryimu_publisher.py">
        <param name="poll_rate" value="10"/>
    </node>
    <node name="neato_laser_publisher" pkg="xv_11_laser_driver" type="neato_laser_publisher">
        <param name="firmware_version" value="2"/>
        <param name="port" value="/dev/ttyAMA0"/>
    </node>
    <node name="sixaxis_publisher" pkg="sixaxis_publisher" type="sixasix_publisher.py">
        <param name="max_speed" value="2.2"/>
        <param name="max_reverse_speed" value="0.5"/>
        <param name="max_rot_speed" value="1.75"/>
        <param name="rate" value="120"/>
        <param name="direct_control" value="false"/>
    </node>
    <node pkg="robot_pose_ekf" type="robot_pose_ekf" name="robot_pose_ekf">
        <param name="output_frame" value="odom"/>
        <param name="freq" value="1000"/>
        <param name="sensor_timeout" value="1.0"/>
        <param name="odom_used" value="true"/>
        <param name="imu_used" value="true"/>
        <param name="vo_used" value="true"/>
        <param name="debug" value="false"/>
        <param name="self_diagnose" value="false"/>
        <remap from="robot_pose_ekf/odom_combined" to="initialpose"/>
    </node>
    <node name="map_server" pkg="map_server" type="map_server" args="$(find nav_config)/shiley3.yaml" respawn="false"/>
    <node pkg="move_base" type="move_base" respawn="false" name="move_base" output="screen">
        <rosparam file="$(find nav_config)/move_base_params.yaml" command="load" />
        <rosparam file="$(find nav_config)/costmap_common_params.yaml" command="load" ns="global_costmap"/>
        <rosparam file="$(find nav_config)/costmap_common_params.yaml" command="load" ns="local_costmap"/>
        <rosparam file="$(find nav_config)/base_local_planner_params.yaml" command="load" ns="TrajectoryPlannerROS"/>
        <rosparam file="$(find nav_config)/base_local_planner_params.yaml" command="load"/>
        <rosparam file="$(find nav_config)/local_costmap_params.yaml" command="load"/>
        <rosparam file="$(find nav_config)/global_costmap_params.yaml" command="load"/>
    </node>
    <node pkg="amcl" type="amcl" name="amcl">
        <!-- Publish scans from best pose at a max of 10 Hz -->
        <param name="min_particles" value="500"/>
        <param name="max_particles" value="5000"/>

        <param name="kld_err" value="0.05"/>
        <param name="kld_z" value="0.99"/>

        <param name="resample_interval" value="1"/>

        <param name="transform_tolerance" value="0.1"/>

        <param name="recovery_alpha_slow" value="0.0"/>
        <param name="recovery_alpha_fast" value="0.0"/>

        <param name="odom_model_type" value="diff"/>
        <param name="odom_alpha5" value="0.1"/>
        <param name="transform_tolerance" value="0.2"/>
        <param name="gui_publish_rate" value="10.0"/>
        <param name="laser_max_beams" value="30"/>

        <param name="do_beamskip" value="true"/>

        <param name="gui_publish_rate" value="10"/>

        <param name="odom_alpha1" value="0.2"/>
        <param name="odom_alpha2" value="0.2"/>
        <!-- translation std dev, m -->
        <param name="odom_alpha3" value="0.8"/>
        <param name="odom_alpha4" value="0.2"/>

        <param name="laser_z_hit" value="0.5"/>
        <param name="laser_z_short" value="0.05"/>
        <param name="laser_z_max" value="0.05"/>
        <param name="laser_z_rand" value="0.5"/>
        <param name="laser_sigma_hit" value="0.2"/>
        <param name="laser_lambda_short" value="0.1"/>
        <param name="laser_model_type" value="likelihood_field"/>
        <param name="laser_likelihood_max_dist" value="2.0"/>
        <param name="update_min_d" value="0.2"/>
        <param name="update_min_a" value="0.5"/>
        <param name="odom_frame_id" value="odom"/>
    </node>
    <!-- TODO: use actual numbers for static transforms -->
    <node pkg="tf" type="static_transform_publisher" name="scan_to_base_broadcaster" args="1 0 0 0 0 0 1 base_link neato_scan 100" />
    <node pkg="tf" type="static_transform_publisher" name="scan_to_base_broadcaster" args="1 0 0 0 0 0 1 map table 100" />
    <node pkg="tf" type="static_transform_publisher" name="scan_to_base_broadcaster" args="1 0 0 0 0 0 1 map desk 100" />
    <node pkg="tf" type="static_transform_publisher" name="scan_to_base_broadcaster" args="1 0 0 0 0 0 1 map chair 100" />
    <node pkg="tf" type="static_transform_publisher" name="scan_to_base_broadcaster" args="1 0 0 0 0 0 1 map couch 100" />
    <node pkg="tf" type="static_transform_publisher" name="scan_to_base_broadcaster" args="1 0 0 0 0 0 1 map bed 100" />
</launch>
