<launch>
    <node name="alexa_voice_control" pkg="alexa_voice_control" type="alexa_voice_control.py"/>
    <node name="arduino_control" pkg="arduino_control" type="arduino_control.py">
           <param name="port" value="/dev/ttyACM0"/>
    </node>
    <node name="arduino_publisher" pkg="arduino_publisher" type="arduino_publisher.py">
        <param name="port" value="/dev/ttyACM0"/>
        <param name="poll_rate" value="100"/>
    </node>
    <node name="localino_server" pkg="localino_server" type="localino_server.py">
        <param name="base_tag_id" value="1002"/>
        <param name="poll_rate" value="4000"/>
        <param name="port" value="10000"/>
    </node>
    <node name="neato_laser_publisher" pkg="xv_11_laser_driver" type="neato_laser_publisher">
        <param name="firmware_version" value="2"/>
        <param name="port" value="/dev/ttyS0"/>
    </node>
</launch>
